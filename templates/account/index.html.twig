{% extends 'base.html.twig' %}

{% block title %}My Account{% endblock %}

{% block content %}
    <h1>My Account</h1>
    <p>Welcome {{ app.user.firstname }} to your account space:</p>
    {% for message in app.flashes('message') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}
    <hr>
    <a href="{{ path('account.password') }}">- Change your password</a><br>
    <a href="{{ path('account.address') }}">- Manage addresses</a><br>
    - My orders
{% endblock %}
