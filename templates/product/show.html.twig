{% extends 'base.html.twig' %}

{% block title %}{{ product.name }}{% endblock %}

{% block content %}
    <h1>Your Product</h1>
    <div class="row">

            <div class="col-md-4">

                    <img src="/uploads/products/{{ product.image }}" alt="{{ product.name }}" class="img-fluid">
                </div>
                <div class="col-md-8">
                    <h3 class="font-weight-bold">{{ product.name }}</h3>
                    <p>{{ product.subtitle }}</p>
                    <p class="font-weight-bold">{{ ( product.price/100 )|format_currency('EUR', locale='de') }}</p>
                    <hr>
                    <p>{{ product.description }}</p>
                    <a href="" class="btn btn-primary">Add to Cart</a>
                </div>
            </div>

    </div>
{% endblock %}
